<UserControl x:Class="BPELDiagram_Pal.AD_Thread_Element"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:DiagramDesigner.Controls;assembly=Modeler" mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="150">
  <Grid>
    <Viewbox 
      Margin="4"  
      Stretch="Fill"
      VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
      Height="Auto"  Width="Auto">
      <Path  Stroke="Black" Name="MainBorder">
        <Path.Data>M 0,30 L 30 0 L 60,30 L 30,60 Z</Path.Data>
      </Path>
    </Viewbox>
    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Path=TextValue}"></TextBlock>
    <controls:DragThumb></controls:DragThumb>
  </Grid>
</UserControl>
